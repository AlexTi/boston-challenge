<div class="header">
  <div class="content">
    <div class="headline">
      <h1 class="lime">
        The Boston Challenge
      </h1>
      <div class="counter">10 days left</div>
    </div>
    <div class="navi">
      <a href="">About</a>
    </div>
  </div>
</div>

<div class="challenge-list">
  <% @challenges.each do |challenge| %>
    <div class="challenge">
      <div class="content">
        <div class="date lime">
          <%= challenge.date %>
        </div>

        <div class="description">
          <%= challenge.text %>
        </div>

        <% if challenge.answerPic.present? %>
          <%= image_tag challenge.answerPic, class: 'answer_pic' %>
        <% end %>

        <%= form_for challenge, url: frontend_challenge_path( challenge ) do |f| %>
          <div>
            <%= f.text_area :answerText %>
          </div>
          <div>
            <%= f.file_field :answerPic %>
          </div>
          <%= f.submit "Solve!", class: 'button' %>
        <% end %>

      </div>
    </div>
  <% end %>
</div>
