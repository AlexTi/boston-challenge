<%= form_for(@challenge) do |f| %>
  <% if @challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
      <% @challenge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <% if @challenge.answerPic.present? %>
    <%= image_tag @challenge.answerPic, class: 'answer_pic' %>
  <% end %>
  <a id="<%= @challenge.id %>-upload" class="button uploader-link">Add pic</a>
  <%= f.file_field :answerPic, class:'hidden', id:@challenge.id.to_s+'-upload-form' %>
  <div class="field">
    <%= f.label :answerText %><br>
    <%= f.text_area :answerText %>
  </div>
  <div class="field">
    <%= f.label :enabled %><br>
    <%= f.check_box :enabled %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.number_field :comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
